package bai_3;

import java.util.Scanner;

public class DiemMonHoc {
	private double diemMon1;
	private double diemMon2;
	private double diemMon3;
	private double diemMon4;
	private double diemMon5;
	
	public DiemMonHoc(double diemMon1, double diemMon2, double diemMon3, double diemMon4, double diemMon5) {
		this.diemMon1 = diemMon1;
		this.diemMon2 = diemMon2;
		this.diemMon3 = diemMon3;
		this.diemMon4 = diemMon4;
		this.diemMon5 = diemMon5;
	}

	public DiemMonHoc() {
	}
	
	public double getDiemMon1() {
		return diemMon1;
	}

	public void setDiemMon1(double diemMon1) {
		this.diemMon1 = diemMon1;
	}

	public double getDiemMon2() {
		return diemMon2;
	}

	public void setDiemMon2(double diemMon2) {
		this.diemMon2 = diemMon2;
	}

	public double getDiemMon3() {
		return diemMon3;
	}

	public void setDiemMon3(double diemMon3) {
		this.diemMon3 = diemMon3;
	}

	public double getDiemMon4() {
		return diemMon4;
	}

	public void setDiemMon4(double diemMon4) {
		this.diemMon4 = diemMon4;
	}

	public double getDiemMon5() {
		return diemMon5;
	}

	public void setDiemMon5(double diemMon5) {
		this.diemMon5 = diemMon5;
	}

	@Override
	public String toString() {
		return "DiemMonHoc [diemMon1=" + diemMon1 + ", diemMon2=" + diemMon2 + ", diemMon3=" + diemMon3 + ", diemMon4="
				+ diemMon4 + ", diemMon5=" + diemMon5 + "]";
	}
	
	public void nhap() {
		Scanner sc =new Scanner(System.in);
		System.out.println("nhập điểm 1");
		this.setDiemMon1(sc.nextDouble());
		
		System.out.println("nhập điểm 2");
		this.setDiemMon2(sc.nextDouble());
		
		System.out.println("nhập điểm 3");
		this.setDiemMon3(sc.nextDouble());
		
		System.out.println("nhập điểm 4");
		this.setDiemMon4(sc.nextDouble());
		
		System.out.println("nhập điểm 5");
		this.setDiemMon5(sc.nextDouble());
	}
}
